{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetId": { "type": "string" },
        "aksClusterName": { "type": "string" },
        "acrName": { "type": "string" },
        "subnetName": { "type": "string" },
        "resourcePrefix": { "type": "string" },
        "publicKey": { "type": "string" },
        "managedIdentityName": { "type": "string" },
        "setupScriptUrl": { "type": "string" },
        "devopsServerUrl" : { "type" : "string" },
        "devopsServerPAT" : { "type" : "securestring" },
        "storageAccountName" : { "type" : "string" },
        "storageSasToken" : { "type" : "string" },
        "apiManagementName" : { "type" : "string" }
    },
    "variables": {
        "vmName": "[concat(parameters('resourcePrefix'), '-devopsAgent-vm')]",
        "networkInterfaceName": "[concat(parameters('resourcePrefix'), '-devopsagent-nic')]",
        "adminName": "devopsagentadmin",
        "home" : "[concat('/home/', variables('adminName'))]",
        "devopsAgentName" : "[concat(parameters('resourcePrefix'), '-devopsAgent')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-05-01",
            "name": "[variables('networkInterfaceName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[concat(parameters('vnetId'), '/subnets/', parameters('subnetName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-12-01",
            "name": "[variables('vmName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
            ],
            "identity": {
                "type": "userAssigned",
                "userAssignedIdentities": {
                    "[resourceID('Microsoft.ManagedIdentity/userAssignedIdentities/', parameters('managedIdentityName'))]": {}
                }
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B1ms"
                },
                "osProfile": {
                    "computerName": "[variables('vmName')]",
                    "adminUsername": "[variables('adminName')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[concat(variables('home'), '/.ssh/authorized_keys')]",
                                    "keyData": "[parameters('publicKey')]"
                                }
                            ]
                        }
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "18.04-LTS",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "fromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2020-12-01",
            "name": "[concat(variables('vmName'),'/', 'setup-az-cli')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', variables('vmName'))]"
            ],
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('setupScriptUrl')]"
                    ],
                    "commandToExecute" : "[concat('sh setup-devops-agent.sh ', variables('adminName'), ' ', parameters('aksClusterName'), ' ', resourceGroup().name, ' ', parameters('storageAccountName'), ' \"', parameters('storageSasToken'), '\" \"', parameters('apiManagementName'), '\" \"', parameters('acrName'), '\"', parameters('devopsServerUrl'), ' ', parameters('devopsServerPAT'), ' ', variables('devopsAgentName'))]"
                }
            }
        }
    ]
}